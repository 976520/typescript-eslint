{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // disable composite and emitDeclarationOnly for docusaurus usage
    "composite": false,
    "emitDeclarationOnly": false,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["DOM", "ES2023"],
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@site/*": ["./*"]
    },
    "types": ["@docusaurus/module-type-aliases", "@docusaurus/theme-classic"]
  },
  "include": [
    "src",
    "tests",
    "tools",
    "plugins",
    "typings",
    "sidebars/*.js",
    "./*.mts",
    "./*.ts"
  ],
  "references": [
    { "path": "../website-eslint" },
    { "path": "../rule-tester" },
    { "path": "../type-utils" },
    { "path": "../rule-schema-to-typescript-types" },
    { "path": "../utils" },
    { "path": "../visitor-keys" },
    { "path": "../ast-spec" },
    { "path": "../types" },
    { "path": "../typescript-estree" },
    { "path": "../scope-manager" },
    { "path": "../parser" }
  ]
}
